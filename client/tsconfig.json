{
  //OPTIONS
  "compilerOptions": {
    // PATHS
    // -- [IMPORT]
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["./api/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@models/*": ["./models/*"],
      "@store/*": ["./store/*"],
      "@styles/*": ["./styles/*"],
      "@styles-layouts/*": ["./styles/layouts/*"],
      "@styles-components/*": ["./styles/components/*"],
    },
    // -- [DECLARATION]
    "typeRoots": ["./node_modules/@types", "./src/@types/modules"],

    // COMPILE
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    // COMPILER
    "watch": true,
    "allowJs": true,
    "checkJs": true,

    // RULE
    // -- [STRICT]
    "noImplicitAny": true, // any type of 'expression' and 'declaration'
    "noImplicitThis": false,  // any type of 'this'
    "alwaysStrict": true, // use strict
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },

  //RANGES
  "include": ["src/**/*", "ext.d.ts"],
  "exclude": ["node_modules/**/*"]
}